<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItemPropuesta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

           <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/imageViewChef"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtNombrePlatoPrincipal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Nombre Plato"
                android:textAlignment="center"
                android:textColor="@color/orange80"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewChef"
                app:layout_constraintTop_toTopOf="parent" />

               <TextView
                   android:id="@+id/txtNombreEntrada"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="4dp"
                   android:text="Entrada:"
                   android:textColor="@color/orange80"

                   android:textSize="16sp"
                   android:textStyle="bold"
                   app:layout_constraintStart_toEndOf="@+id/imageViewChef"
                   app:layout_constraintTop_toBottomOf="@+id/txtNombrePlatoPrincipal" />

               <TextView
                   android:id="@+id/txtNombrePostre"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="5dp"
                   android:text="Postre:"
                   android:textColor="@color/orange80"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   app:layout_constraintStart_toEndOf="@+id/imageViewChef"
                   app:layout_constraintTop_toBottomOf="@+id/txtNombreEntrada" />

               <TextView
                   android:id="@+id/textView20"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="Â¡Reserva tu propuesta!"
                   android:textAlignment="center"
                   android:textColor="@color/orange80"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@+id/imageViewChef"
                   app:layout_constraintTop_toBottomOf="@+id/txtNombreSnack" />

               <TextView
                   android:id="@+id/txtNombreSnack"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginEnd="10dp"
                   android:text="Snack:"
                   android:textColor="@color/orange80"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@+id/imageViewChef"
                   app:layout_constraintTop_toBottomOf="@+id/txtNombrePostre" />

           </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.cardview.widget.CardView>